<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit a comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" rows="7" autofocus required><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                 <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </form>
        <a href="/campgrounds">Back to list...</a>
    </div>
    
</div>

<% include ../partials/footer %>