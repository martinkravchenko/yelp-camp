<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Add new campground</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Campground name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image url">
            </div>
             <div class="form-group">
                <textarea class="form-control" name="description" placeholder="Description" rows="7"></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price/night" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                 <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Back to list...</a>
    </div>
    
</div>

<% include ../partials/footer %>